@model SCOP_AppWeb.Models.Devoluciones

@{
    ViewData["Title"] = "Solicitar Devolución";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Solicitar devolución</h4>

<hr />

<style>
    .content {
        background-color: cadetblue;
    }

    .color {
        background-color: #F0FFFF;
        font-family: 'Lobster', cursive;
    }

    .letra {
        color: black;
    }
</style>
<body class="color">
    <div class="container">
<div class="row">
            <div class="col-md-4 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdOrdenProduccion" class="control-label"></label>
                <input asp-for="IdOrdenProduccion" class="form-control" />
                <span asp-validation-for="IdOrdenProduccion" class="text-danger"></span>
            </div>                      
            <div class="form-group">
                <label asp-for="ImporteDevolucion" class="control-label"></label>
                <input asp-for="ImporteDevolucion" class="form-control" />
                <span asp-validation-for="ImporteDevolucion" class="text-danger"></span>
            </div>          
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-danger mt-2" role="alert">
                    <h3>@TempData["Mensaje"]</h3>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-success mt-2 btn-effect" />
                        <a asp-action="Index" class="btn btn-primary mt-2 btn-effect">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>


    </div>
</body>