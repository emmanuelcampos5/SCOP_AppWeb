@model SCOP_AppWeb.Models.Requisiciones

@{
    ViewData["Title"] = "Añadir Requisición";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Añadir nueva requisición</h1>
@if (!User.Identity.IsAuthenticated)
{
    <div class="alert alert-danger" role="alert">
        <h3>Inicie sesión para añadir una requisición</h3>
    </div>
}
<hr />

<style>
    .content {
        background-color: cadetblue;
    }

    .color {
        background-color: #F0FFFF;
        font-family: 'Lobster', cursive;
    }

    .letra {
        color: black;
    }
</style>
<body class="color">
    <div class="container">
<div class="row">
            <div class="col-md-4 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdOrdenProduccion" class="control-label">Número de Orden de Producción</label>
                <input asp-for="IdOrdenProduccion" class="form-control" />
                <span asp-validation-for="IdOrdenProduccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label">Usuario</label>

                @if (User.Identity.IsAuthenticated)
                {
                    <input class="form-control" value="@ViewBag.Usuarios" readonly />
                }
                else
                {                    
                    <input class="form-control" value="       " readonly />
                }
            </div>

            <div class="form-group">
                <label asp-for="TipoRequisicion" class="control-label">Tipo de Requisición</label>
                <select asp-for="TipoRequisicion" class="form-control">
                    <option value="ManoDeObra">Mano de obra</option>
                    <option value="MateriaPrima">Materia prima</option>
                    <option value="CostosIndirectos">Costos indirectos</option>
                </select>
                <span asp-validation-for="TipoRequisicion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CostoRequisicion" class="control-label">Costo de Requisición</label>
                <input asp-for="CostoRequisicion" class="form-control" />
                <span asp-validation-for="CostoRequisicion" class="text-danger"></span>
            </div>

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <h3>@TempData["Mensaje"]</h3>
                </div>
            }

            <div class="form-group mt-2">
                @if (User.Identity.IsAuthenticated)
                {
                    <input type="submit" value="Añadir" class="btn btn-success btn-effect" />
                }
                else
                {
                    <input type="submit" value="Añadir" class="btn btn-success btn-effect" disabled />
                }
                <a asp-action="Index" class="btn btn-secondary ml-2 btn-effect">Volver a la lista</a>
            </div>
        </form>
    </div>
    
</div>
    </div>
</body>