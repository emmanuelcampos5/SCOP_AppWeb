@model SCOP_AppWeb.Models.OrdenProduccion

@{
    ViewData["Title"] = "Produccion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Produccion</h1>

<h3>Está seguro que desea pasar a producción esta orden</h3>

<style>
    .content {
        background-color: cadetblue;
    }

    .color {
        background-color: #F0FFFF;
        font-family: 'Lobster', cursive;
    }

    .letra {
        color: black;
    }
</style>

<body class=" color letra">
<div>
    <h4>OrdenProduccion</h4>
    <hr />
    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-warning" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            <strong>@TempData["MensajeError"]</strong>
        </div>
    }
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRecepcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRecepcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoProduccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoProduccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CantidadProductos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CantidadProductos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
      
    </dl>
    
    <form asp-action="Produccion">
        <input type="hidden" asp-for="IdOrdenProduccion" />
       
            <input type="submit" value="Aceptar" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la lista</a>
    </form>
</div>
</body>