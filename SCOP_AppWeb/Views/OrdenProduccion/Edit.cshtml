@model SCOP_AppWeb.Models.OrdenProduccion

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>OrdenProduccion</h4>
<hr />

<style>
    .content {
        background-color: cadetblue;
    }

    .color {
        background-color: #F0FFFF;
        font-family: 'Lobster', cursive;
    }

    .letra {
        color: black;
    }
</style>
<body class=" color letra">
<div class="row">
        <div class="col-md-4  mx-auto" style="border: 1px solid #ccc; padding: 20px; border-radius: 10px;">
        <form asp-action="Edit">
            @if (TempData["MensajeError"] != null)
            {
                <div class="alert alert-warning" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong>@TempData["MensajeError"]</strong>
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdOrdenProduccion" />
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                <input asp-for="IdUsuario" class="form-control" readonly/>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRecepcion" class="control-label"></label>
                <input asp-for="FechaRecepcion" class="form-control" readonly/>
                <span asp-validation-for="FechaRecepcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoProduccion" class="control-label"></label>
                <select asp-for="EstadoProduccion" class="combobox form-control">
                    <option value="Espera">Espera</option>
                    <option value="Producción">Producción</option>
                    <option value="Finalizado">Finalizado</option>
                </select>
                <span asp-validation-for="EstadoProduccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadProductos" class="control-label"></label>
                <input asp-for="CantidadProductos" class="form-control" />
                <span asp-validation-for="CantidadProductos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstadoActivo" /> @Html.DisplayNameFor(model => model.EstadoActivo)
                </label>
            </div>
         

                <div class="form-group mt-2">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la lista</a>
                </div>
        </form>
    </div>
</div>



</body>