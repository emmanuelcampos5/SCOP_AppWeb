@model SCOP_AppWeb.Models.OrdenProduccion

@{
    ViewData["Title"] = "Finalizar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Finalizar</h1>

<h3>Desea finalizar esta orden?</h3>

<style>
    .content {
        background-color: cadetblue;
    }

    .color {
        background-color: #F0FFFF;
        font-family: 'Lobster', cursive;
    }

    .letra {
        color: black;
    }
</style>
<body class="color letra">
<div>
    <h4>OrdenProduccion</h4>
    <hr />
    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-warning" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            <strong>@TempData["MensajeError"]</strong>
        </div>
    }
        <dl class="row mx-auto" style="border: 1px solid #ccc; padding: 20px; border-radius: 10px;">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRecepcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRecepcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoProduccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoProduccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CantidadProductos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CantidadProductos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoActivo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoActivo)
        </dd>
    </dl>

        <form asp-action="Finalizar">
            <input type="hidden" asp-for="IdOrdenProduccion" />
            <input type="submit" value="Finalizar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la lista</a>
        </form>
</div>
</body>